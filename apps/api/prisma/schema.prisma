datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

generator pothos {
  provider = "prisma-pothos-types"
}

model User {
  id      String @id
  address String
  staff   Staff?
}

model Staff {
  id     String @id @default(uuid())
  user   User   @relation(fields: [id], references: [id])
  userId String
}
