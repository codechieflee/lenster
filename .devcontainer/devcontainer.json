{
  "name": "Codespaces",
  "image": "mcr.microsoft.com/devcontainers/base:bullseye",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "nodeGypDependencies": true,
      "version": "18"
    },
    "ghcr.io/devcontainers-contrib/features/pnpm:2": {}
  },
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}"
  },
  "hostRequirements": {
    "cpus": 6,
    "memory": "6gb"
  },
  "onCreateCommand": "./script/bootstrap",
  "postStartCommand": "pnpm dev",
  "forwardPorts": [4783, 4784, 4785, 8082, 8083, 8084, 8085],
  "portsAttributes": {
    "4783": { "label": "Web app", "onAutoForward": "notify" },
    "4784": { "label": "Prerender app", "onAutoForward": "ignore" },
    "4785": { "label": "Storybook UI", "onAutoForward": "ignore" },
    "8082": { "label": "STS token generator worker", "onAutoForward": "ignore" },
    "8083": { "label": "Metadata worker", "onAutoForward": "ignore" },
    "8084": { "label": "Freshdesk worker", "onAutoForward": "ignore" }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "formulahendry.auto-close-tag",
        "mikestead.dotenv",
        "EditorConfig.EditorConfig",
        "dbaeumer.vscode-eslint",
        "GitHub.copilot-nightly",
        "GitHub.remotehub",
        "eamodio.gitlens",
        "wix.vscode-import-cost",
        "mquandalle.graphql",
        "PKief.material-icon-theme",
        "christian-kohler.npm-intellisense",
        "bradlc.vscode-tailwindcss"
      ]
    }
  }
}
